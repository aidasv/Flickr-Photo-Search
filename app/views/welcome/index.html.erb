
<div id="welcome" class="<%= @photos.empty? ? 'welcome-none': '' %>" >
  <div class="row">
    <div class="col-sm-3"></div>
      <div class="col-sm-6 col-sm_offset-2">
        <div id="fixed">
        <%= form_tag(search_path) do %>
          <%= text_field_tag :search_tag, nil,  placeholder: "Enter search tag", class: "input-lg" %>
          <%= submit_tag 'Search', class: "btn, btn-lg" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div id="my-photos">
    <div id="welcome-photos">
      <% @photos.each do |photo| %>
          <%= render partial: "photo", locals: {photo: photo } %>
      <% end %>
    </div>
  </div>


  <div id="infinite-scrolling">
    <%= will_paginate @photos if session[:search_tag].present? %>
  </div>

</div>
